<Window x:Class="ProjektObiektowe.AddRatingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Rating" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="User Name:" Margin="5"/>
            <TextBox x:Name="UserNameTextBox" Margin="5"/>

            <TextBlock Text="Film ID:" Margin="5"/>
            <TextBox x:Name="FilmIdTextBox" Margin="5"/>

            <TextBlock Text="Rating (1-5):" Margin="5"/>
            <TextBox x:Name="RatingTextBox" Margin="5"/>

            <Button Content="Add Rating" Click="AddRatingButton_Click" Width="100" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
