<Window x:Class="ProjektObiektowe.AddActorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektObiektowe"
        mc:Ignorable="d"
        Title="Add Actor" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name:" Margin="5"/>
            <TextBox x:Name="NameTextBox" Margin="5"/>

            <TextBlock Text="Surname:" Margin="5"/>
            <TextBox x:Name="SurnameTextBox" Margin="5"/>

            <TextBlock Text="Birth Date:" Margin="5"/>
            <DatePicker x:Name="BirthDatePicker" Margin="5"/>

            <TextBlock Text="Select Film:" Margin="5"/>
            <ComboBox x:Name="FilmComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Margin="5"/>

            <Button Content="Add Actor" Click="AddActorButton_Click" Width="100" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
